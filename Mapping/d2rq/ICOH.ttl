@prefix map: <#> .
@prefix db: <> .
@prefix vocab: <vocab/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix d2rq: <http://www.wiwiss.fu-berlin.de/suhl/bizer/D2RQ/0.1#> .
@prefix jdbc: <http://d2rq.org/terms/jdbc/> .
@prefix corago: <http://corago.unibo.it/sm/> .
@prefix frbroo: <http://erlangen-crm.org/efrbroo/> .
@prefix crm: <http://erlangen-crm.org/current/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix xml: <http://www.w3.org/XML/1998/namespace/#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix d2r: <http://sites.wiwiss.fu-berlin.de/suhl/bizer/d2r-server/config.rdf#> .
@prefix bf: <http://id.loc.gov/ontologies/bibframe/> .

# Realizzato da: Paolo Bonora
# Versione del: 2/1/2018

<> a d2r:Server;
  d2r:sparqlTimeout 0;
  d2r:pageTimeout 5;
 .

map:database a d2rq:Database;
	d2rq:jdbcDriver "sun.jdbc.odbc.JdbcOdbcDriver";
	d2rq:jdbcDSN "jdbc:odbc:ICOH";
	.

# Gestione Autori (autori)
# Classe foaf:Agent 
map:Agent a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "agent/@@autori.anno|urlify@@/@@autori.id|urlify@@/@@autori.progAut|urlify@@";
	d2rq:class foaf:Agent;
.	

map:Agent_label1 a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Agent;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:pattern "@@autori.Cognome@@, @@autori.Nome@@";
	d2rq:condition "autori.Cognome <> '' AND autori.Nome <> ''";
.

map:Agent_label2 a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Agent;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:pattern "@@autori.Cognome@@";
	d2rq:condition "autori.Cognome <> '' AND ISNULL(autori.Nome)";
.

# Gestione contributi
# bibframe:Work
map:Work a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "work/@@contributi.anno|urlify@@/@@contributi.id|urlify@@";
	d2rq:class bf:Work;
.

map:Work_label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Work;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:column "contributi.Title";
	d2rq:condition "contributi.Title <> ''";
.

map:Work_Agent a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Work;
	d2rq:property bf:agent;
	d2rq:refersToClassMap map:Agent;
	d2rq:join "contributi.anno = autori.anno";
	d2rq:join "contributi.id = autori.id";
.

# Gestione volumi
map:Volume a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "volume/@@volumi.anno|urlify@@/@@volumi.id|urlify@@";
	d2rq:class bf:Instance;
.

map:Volume_label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Volume;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:column "volumi.descr";
	d2rq:condition "volumi.descr <> ''";
.

map:Volume_width a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Volume;
	d2rq:property bf:dimensions;
	d2rq:datatype xsd:string;
	d2rq:column "volumi.width";
.

map:Volume_height a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Volume;
	d2rq:property bf:dimensions;
	d2rq:datatype xsd:string;
	d2rq:column "volumi.height";
.

#Gestione TOC
map:TOC a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "toc/@@toc.anno|urlify@@/@@toc.key|urlify@@";
	d2rq:class bf:TableOfContents;
.

map:Volume_TOC a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Volume;
	d2rq:property bf:tableOfContents;
	d2rq:refersToClassMap map:TOC;
	d2rq:join "volumi.volID = toc.volID";
	d2rq:join "volumi.anno = toc.anno";
.

map:TOC_label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:TOC;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:column "toc.Tit";
	d2rq:condition "toc.Tit <> ''";
.

map:Work_TOC a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Work;
	d2rq:property bf:partOf;
	d2rq:refersToClassMap map:TOC;
	d2rq:join "contributi.Sect1 = toc.sezId";
	d2rq:join "contributi.anno = toc.anno";
.

#Gestione Conferenze
map:Event a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "conference/@@conferenze.anno|urlify@@";
	d2rq:class bf:Event;
.

map:Event_label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Event;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:column "conferenze.title";
	d2rq:condition "conferenze.title <> ''";
.

map:Event_date a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Event;
	d2rq:property bf:date;
	d2rq:column "conferenze.data";
	d2rq:condition "conferenze.data <> ''";
.

map:Event_place a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Event;
	d2rq:property bf:place;
	d2rq:column "conferenze.sede";
	d2rq:condition "conferenze.sede <> ''";
.

map:Event_Work a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Event;
	d2rq:property bf:eventContent;
	d2rq:refersToClassMap map:Work;
	d2rq:join "contributi.anno = conferenze.anno";
.





