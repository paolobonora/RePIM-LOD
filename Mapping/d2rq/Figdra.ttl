<> a d2r:Server;
  d2r:sparqlTimeout 0;
  d2r:pageTimeout 5;
 .

map:database a d2rq:Database;
	d2rq:jdbcDriver "sun.jdbc.odbc.JdbcOdbcDriver";
	d2rq:jdbcDSN "jdbc:odbc:CORAGO_TOPONIMI";
	.




#FIGURE DRAMMATICHE
map:FiguraDrammatica a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "FIGDRA/@@SWT_PER_FIGDRA.ID_ATT|urlify@@";
	d2rq:class corago:C22_Dramatic_Figure;
	d2rq:containsDuplicates "true";
.

map:LegameFiguraDrammaticaPadre a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:FiguraDrammatica;
	d2rq:property corago:CP18_has_parent_figure;
	d2rq:uriPattern "FIGDRA/@@ATTRIBUTI.ID_ATT0|urlify@@";
	d2rq:join "SWT_PER_FIGDRA.ID_ATT=ATTRIBUTI.ID_ATT";
	d2rq:condition "ATTRIBUTI.ID_ATT<>ATTRIBUTI.ID_ATT0";
	d2rq:containsDuplicates "true";
.

