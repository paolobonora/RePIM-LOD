# Versione del: 04/07/2018

<> a d2r:Server;
  d2r:sparqlTimeout 0;
  d2r:pageTimeout 5;
 .

map:database a d2rq:Database;
	d2rq:jdbcDriver "sun.jdbc.odbc.JdbcOdbcDriver";
	d2rq:jdbcDSN "jdbc:odbc:CORAGO";
	.

map:Brano a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "BRANI/@@BRANI.COD_BRANO|urlify@@";
	d2rq:condition "BRANI.LIBRETTO <> ''";
.	

#Tipo di fonte letteraria
map:CDP18_is_literary_text_original1 a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Brano;
	d2rq:property corago:CDP18_is_literary_text_original;
	d2rq:sqlExpression "LEN('1')";
	d2rq:datatype xsd:boolean;
	d2rq:condition "BRANI.LIBRETTO = 'LBT' OR BRANI.LIBRETTO = 'LBTN'";
.

map:CDP18_is_literary_text_original2 a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Brano;
	d2rq:property corago:CDP18_is_literary_text_original;
	d2rq:sqlExpression "LEN('')";
	d2rq:datatype xsd:boolean;
	d2rq:condition "BRANI.LIBRETTO <> 'LBT' AND BRANI.LIBRETTO <> 'LBTN'";
.

map:CDP19_literary_text_originality a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Brano;
	d2rq:property corago:CDP19_literary_text_originality;
	d2rq:column "TADE.TADEDA1";
	d2rq:datatype xsd:string;
	d2rq:join "BRANI.LIBRETTO = TADE.ID_TADE";
.