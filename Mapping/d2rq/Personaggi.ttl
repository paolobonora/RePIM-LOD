@prefix map: <#> .
@prefix db: <> .
@prefix vocab: <vocab/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix d2rq: <http://www.wiwiss.fu-berlin.de/suhl/bizer/D2RQ/0.1#> .
@prefix jdbc: <http://d2rq.org/terms/jdbc/> .
@prefix corago: <http://corago.unibo.it/sm/> .
@prefix frbroo: <http://erlangen-crm.org/efrbroo/> .
@prefix crm: <http://erlangen-crm.org/current/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix xml: <http://www.w3.org/XML/1998/namespace/#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix d2r: <http://sites.wiwiss.fu-berlin.de/suhl/bizer/d2r-server/config.rdf#> .
@prefix bf: <http://id.loc.gov/ontologies/bibframe/> .
@prefix ud: <http://universaldependencies.org/u/dep#>.
@prefix skos: <http://www.w3.org/2004/02/skos/core#>.

# Realizzato da: Paolo Bonora
# Versione del: 16/11/2018

<> a d2r:Server;
  d2r:sparqlTimeout 0;
  d2r:pageTimeout 5;
 .

map:database a d2rq:Database;
	d2rq:jdbcDriver "sun.jdbc.odbc.JdbcOdbcDriver";
	d2rq:jdbcDSN "jdbc:odbc:CORAGO";
	.


### ESTRAZIONE ATTRIBUTI Personaggi
# Personaggi da attributi
map:Personaggio a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "PERSONAG/@@PERSONAG.COD_PER|urlify@@";
.

# ATTRIBUTI
map:Attributo a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "PERSONAG/ATT/@@ATTRIBUTI.ID_ATT|urlify@@";
	d2rq:class corago:C17_Character_Feature;
.

map:TipoAttributo a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "PERSONAG/ATT/TYPE/@@ATTRIBUTI.ATTTIPO|urlify@@";
	d2rq:class crm:E55_Type;
.

map:TipoAttributo_label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:TipoAttributo;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:column "ATTRIBUTI.ATTTIPO";
.

map:GenereAttributo a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "PERSONAG/ATT/GEN/@@ATTRIBUTI.ATTSESSO|urlify@@";
	d2rq:class crm:E55_Type;
	d2rq:condition "ATTRIBUTI.ATTSESSO<>''";
.

map:GenereAttributo_label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:GenereAttributo;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:column "ATTRIBUTI.ATTSESSO"
.

map:Attributo_Tipo a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Attributo;
	d2rq:property corago:CPC121_has_qualifier;
	d2rq:refersToClassMap map:TipoAttributo;
	d2rq:join "ATTRIBUTI.ATTTIPO=ATTRIBUTI.ATTTIPO";
.

map:Attributo_Genere a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Attributo;
	d2rq:property crm:P2_has_type;
	d2rq:refersToClassMap map:GenereAttributo;
	d2rq:condition "ATTRIBUTI.ATTSESSO<>''";
.

map:Attributo_Top a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Attributo;
	d2rq:property skos:hasTopConcept;
	d2rq:uriPattern "PERSONAG/ATT/@@ATTRIBUTI.ID_ATT0|urlify@@";
	d2rq:condition "ATTRIBUTI.ID_ATT<>ATTRIBUTI.ID_ATT0";
.

map:Attributo_label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Attributo;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:column "ATTRIBUTI.ATTVOCE";
.

map:AttributoPersonaggio a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Personaggio;
	d2rq:property corago:CPC119_has_feature;
	d2rq:refersToClassMap map:Attributo;
	d2rq:join "SWT_PER_ATT.ID_ATT = ATTRIBUTI.ID_ATT";
	d2rq:join "SWT_PER_ATT.COD_PER = PERSONAG.COD_PER";
.

#FIGURE DRAMMATICHE
map:FiguraDrammatica a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "FIGDRA/@@SWT_PER_FIGDRA.ID_ATT|urlify@@";
	d2rq:class corago:C22_Dramatic_Figure;
.
map:FiguraDrammatica_label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:FiguraDrammatica;
	d2rq:property rdfs:label;
	d2rq:datatype xsd:string;
	d2rq:column "ATTRIBUTI.ATTVOCE";
	d2rq:join "ATTRIBUTI.ID_ATT=SWT_PER_FIGDRA.ID_ATT";
.
map:FiguraDrammatica_Personaggio a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:Personaggio;
	d2rq:property crm:P67_refers_to;
	d2rq:refersToClassMap map:FiguraDrammatica;
	d2rq:join "SWT_PER_FIGDRA.COD_PER=PERSONAG.COD_PER";
.
map:FiguraDrammaticaQualifica a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "FIGDRA/QUAL/@@SWT_PER_FIGDRA.ID_ATT|urlify@@";
	d2rq:condition "ATTRIBUTI.ATTDID <> ''";
	d2rq:join "SWT_PER_FIGDRA.ID_ATT=ATTRIBUTI.ID_ATT";
	d2rq:class crm:E62_String;
.
map:FiguraDrammaticaQualificaLabel a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:FiguraDrammaticaQualifica;
	d2rq:property rdfs:label;
	d2rq:column "ATTRIBUTI.ATTDID";
.
map:LegameFiguraDrammaticaQualifica a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:FiguraDrammatica;
	d2rq:property crm:P3_has_note;
	d2rq:refersToClassMap map:FiguraDrammaticaQualifica;
	d2rq:join "SWT_PER_FIGDRA.ID_ATT=ATTRIBUTI.ID_ATT"
.
map:LegameFiguraDrammaticaPadre a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:FiguraDrammatica;
	d2rq:property corago:CP18_has_parent_figure;
	d2rq:uriPattern "FIGDRA/@@ATTRIBUTI.ID_ATT0|urlify@@";
	d2rq:join "SWT_PER_FIGDRA.ID_ATT=ATTRIBUTI.ID_ATT";
	d2rq:condition "ATTRIBUTI.ID_ATT<>ATTRIBUTI.ID_ATT0";
.

